    "@xterm/xterm": "^6.0.0",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "framer-motion": "^12.33.0",
    "gradient-string": "^2.0.2",
    "lucide-react": "^0.563.0",
    "next": "14.2.3",
    "next-pwa": "^5.6.0",
    "node-pty": "^1.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@types/web-push": "^3.6.3",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  }
