    "push-notifications",
    "ai-agents",
    "claude-code",
    "pwa",
    "web-push",
    "developer-tools"
  ],
  "license": "MIT",
  "author": "0MATRIX0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0MATRIX0/agent-connect.git"
  },
  "homepage": "https://github.com/0MATRIX0/agent-connect#readme",
  "bugs": {
    "url": "https://github.com/0MATRIX0/agent-connect/issues"
  },
  "bin": {
    "agent-connect": "bin/agent-connect.js"
  },
  "files": [
    "bin/",
    "app/",
    "lib/",
    "public/",
    "worker/",
    "server.js",
    "server-nextjs.js",
    "next.config.js",
    "tsconfig.json",
    "tailwind.config.js",
    "postcss.config.js",
    ".next/",
    "!.next/cache/",
    "!.next/trace"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "concurrently --names \"nextjs,api\" --prefix-colors \"blue,green\" \"next dev -p 3110\" \"npm run dev:api\"",
    "dev:https": "node server-nextjs.js",
    "dev:api": "node server.js",
    "build": "next build",
    "start": "node bin/start.js",
    "start:nextjs": "next start -p 3110",
    "start:api": "node server.js",
    "start:https": "NODE_ENV=production node server-nextjs.js",
    "start:tailscale": "concurrently --names \"nextjs,api\" --prefix-colors \"blue,green\" \"DISABLE_SSL=true LISTEN_HOST=127.0.0.1 NODE_ENV=production node server-nextjs.js\" \"DISABLE_SSL=true API_HOST=127.0.0.1 node server.js\"",
    "lint": "next lint",
    "generate-vapid-keys": "node scripts/generate-vapid-keys.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
